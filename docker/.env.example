# Myncer Environment Configuration
# Copy this file to .env and fill in your secrets.

# --- Database Configuration ---
# Used by the official Postgres image to initialize the DB on first run
POSTGRES_DB=myncer
POSTGRES_USER=devuser
POSTGRES_PASSWORD=devpass

# --- Server Configuration ---
# Database connection details for the server service
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_SSLMODE=disable

# Server mode (DEV or PROD)
SERVER_MODE=DEV

# JWT Secret (generate a strong random string for production)
JWT_SECRET=a_very_secret_and_long_jwt_key_for_local_dev

# --- Spotify OAuth Credentials ---
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# --- YouTube OAuth Credentials ---
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret

# --- Frontend & Nginx Configuration ---
# Nginx proxy settings
BACKEND_HOST=server
BACKEND_PORT=8080

# Runtime config for the web client (injected by entrypoint.sh)
VITE_SPOTIFY_REDIRECT_URI=http://localhost/datasource/spotify/callback
VITE_YOUTUBE_REDIRECT_URI=http://localhost/datasource/youtube/callback
